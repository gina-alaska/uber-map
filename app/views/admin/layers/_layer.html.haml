%li
  .row-fluid
    .span5.name
      - if layer.children?
        %i.icon-plus{ data: { toggle: 'collapse', target: "#children-of-#{layer.slug}" }}
      = layer.name
    .span4= layer.slug
    .span1= layer.data_type
    .span2
      = link_to 'Edit', edit_admin_layer_path(layer), class: 'btn'
      = link_to 'Delete', [:admin, layer], :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-danger'
