%h2.pull-left Layers
.pull-right
  = select_tag 'add-layer-selection', add_layer_options(map, Layer.all - map.layers)
  = link_to 'Add Layer', '#', class: 'btn btn-primary', id: 'add-layer-btn'
  = link_to 'New Layer', new_layer_path, class: 'btn btn-primary'
%table.table.table-bordered.table-striped.table-condensed
  %thead
    %tr
      %th Name
      %th Type
      %th
  %tbody
    - map.layers.each do |layer|
      %tr
        %td= layer.name
        %td= layer.data_type
        %td.span1= link_to 'Remove', remove_map_layer_path(map, layer), method: :delete, confirm: "Are you sure?", class: 'btn btn-danger'
:javascript
  $('#add-layer-btn').on('click', function(e) {
    var val = $('#add-layer-selection option:selected').val();
    $.post(val, function(data) {
      $('#layers').html(data)
    })
  });
