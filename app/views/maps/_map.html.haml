#map
#map-legends
  .accordion-group
    .accordion-heading
      = link_to 'Legends', '#map-buttons', :class => 'accordion-toggle', "data-toggle" => "collapse", "data-parent" => "#map-legends"
    #map-buttons.accordion-body.in.collapse
      .accordion-inner
        - active_map.layers.each do |layer|
          = render 'layers/legend', layer: layer
:javascript
  $(document).ready(function() {
    uber = new UberMap();
    uber.init();
    #{ load_all_map_layers(active_map) }
  });
  
