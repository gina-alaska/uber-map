%tr
  %td= f.text_field :field, class: 'input-small'
  %td
    = f.select :handler, ['between', '=', '>=', '>', '<=', '<', 'colorramp'], {}, class: 'span2'
  %td= f.text_field :values, class: 'input-small'
  = f.fields_for rule.style do |s|
    %td= s.select :graphicName, ['circle', 'square'], {}, class: 'span2'
    %td= s.text_field :rotation, class: 'span1'
    %td= s.text_field :pointRadius, class: 'span1'
    %td= s.text_field :strokeColor, class: 'span1'
    %td= s.text_field :strokeWidth, class: 'span1'
    %td= s.text_field :strokeOpacity, class: 'span1'
    %td= s.text_field :fillColor, class: 'span1'
    %td= s.text_field :fillOpacity, class: 'span1'
    %td= s.text_field :graphicZIndex, class: 'span1'
